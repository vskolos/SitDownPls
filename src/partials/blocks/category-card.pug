article(class=`card ${className ? className : ''}`)
  ul.lst.card__subcategories
    each text in categorySubcategories
      li.card__subcategory= text
  h3.card__title= categoryName
    a.lnk.card__title-link(href='catalog.html')
      img.card__title-icon(src='arrow-right-circle.svg')
  .card__img
    picture.card__picture
      source(srcset=`img/category-${categoryImg}-1400px.webp, img/category-${categoryImg}-1400px@2x.webp 2x` media='(min-width: 1400px)' type='image/webp')
      source(srcset=`img/category-${categoryImg}-1400px.png, img/category-${categoryImg}-1400px@2x.png 2x` media='(min-width: 1400px)')
      source(srcset=`img/category-${categoryImg}-1024px.webp, img/category-${categoryImg}-1024px@2x.webp 2x` media='(min-width: 1024px)' type='image/webp')
      source(srcset=`img/category-${categoryImg}-1024px.png, img/category-${categoryImg}-1024px@2x.png 2x` media='(min-width: 1024px)')
      source(srcset=`img/category-${categoryImg}-768px.webp, img/category-${categoryImg}-768px@2x.webp 2x` media='(min-width: 768px)' type='image/webp')
      source(srcset=`img/category-${categoryImg}-768px.png, img/category-${categoryImg}-768px@2x.png 2x` media='(min-width: 768px)')
      source(srcset=`img/category-${categoryImg}.webp, img/category-${categoryImg}@2x.webp 2x` type='image/webp')
      source(srcset=`img/category-${categoryImg}.png, img/category-${categoryImg}@2x.png 2x`)
      img(src=`img/category-${categoryImg}-1400px.png` alt=`${categoryName}`)
  a.lnk.card__link(href='catalog.html')
    span.card__link-text В каталог
    img.card__link-icon(src='arrow-right-circle.svg')
